{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "Common/*": ["src/common/*"],
      "Pages/*": ["src/pages/*"],
      "Generics/*": ["src/modules/generics/*"],
      "Profile/*": ["src/modules/profile/*"],
      "Portal/*": ["src/modules/portal/*"],
      "Styles/*": ["styles/*"],
      "Public/*": ["public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "tailwind.config.js"]
}
